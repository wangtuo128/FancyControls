<Window
    x:Class="FancyControl.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fc="clr-namespace:FancyControls;assembly=FancyControls"
    xmlns:local="clr-namespace:FancyControl.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    
    <StackPanel HorizontalAlignment="Center">

        <fc:FlowLine IsAnimating="{Binding IsAnimating}" PolyLinePoints="340 20 140 20 140 100 0 100" />

        <Button 
            Command="{Binding ControlAnimatingCommand}"
            Width="100"
            Height="20"/>
    </StackPanel>
</Window>
