<UserControl
    x:Class="FancyControls.FlowLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FancyControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Grid.Row="0"
        Grid.Column="0"
        Margin="5">

        <Polyline x:Name="BottomLine" Stroke="#ddd" />

        <Polyline
            x:Name="MovingLine"
            StrokeThickness="1" />
    </Grid>

</UserControl>
